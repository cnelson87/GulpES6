{{!-- this is the minimal HTML structure required for a standard modal window --}}
<div class="modal-window">
	<div class="modal-overlay"></div>
	<div class="modal" role="dialog">
		<div class="modal--header">
			<button type="button" class="btn-close" title="close modal dialog">
				<span class="fa fa-close"></span>
			</button>
		</div>
		<div class="modal--main" role="document">
			<div class="modal--content">
			</div>
		</div>
	</div>
	<a href="#" class="reset-focus"></a>
</div>
